<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="72dp"
android:orientation="horizontal"
android:id="@+id/frame_member_found">

<LinearLayout
    android:id="@+id/contentList"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_list"
    android:layout_marginLeft="@dimen/margin_list"
    android:layout_marginTop="@dimen/list_margin_top"
    android:layout_marginBottom="@dimen/list_margin_top"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:gravity="left">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/index"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_number"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="1."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_image"
        android:layout_marginLeft="@dimen/padding_image"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/image_app"
            android:layout_width="@dimen/height_number"
            android:layout_height="@dimen/height_number"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Application" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/category_app"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12dp"
                android:text="GAMES"
                android:layout_alignParentTop="true"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

    <View android:id="@+id/nextDivisor"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/next_divisor"
        android:layout_marginRight="@dimen/next_divisor"
        android:background="@color/item_divider"
        android:layout_gravity="center_horizontal|bottom" />
</FrameLayout>